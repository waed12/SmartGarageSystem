<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/addnewline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="إضافة خط نقل جديد"
        android:textColor="#100E0E"
        android:textSize="30sp"
        android:textStyle="normal"
        tools:text="إضافة خط نقل جديد " />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="20dp"
        android:background="#FF6F00" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/addLine_sour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF6F00"
                    android:entries="@array/source"
                    />

                <TextView
                    android:id="@+id/source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="المدينة"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    tools:text="المدينة" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/addLine_dest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF6F00"

                    android:entries="@array/destination"/>

                <TextView
                    android:id="@+id/destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="الوجهة"
                    android:textColor="#0B0A0A"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    tools:text="الوجهة" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shikle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="شيكل"
                    android:textColor="#0B0A0A"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    tools:text="شيكل" />

                <EditText
                    android:id="@+id/addLine_fare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/linefare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="أجرة نقل الخط"
                    android:textColor="#100E0E"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    tools:text="أجرة نقل الخط" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <Button
                    android:id="@+id/addLine_cancle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF6F00"
                    android:text="إلغاء"
                    android:textColor="#EDE9E9"
                    android:textSize="20sp"
                    tools:text="إلغاء" />

                <Button
                    android:id="@+id/addline_addButt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FF6F00"
                    android:text="إضافة"
                    android:textColor="#F6F0F0"
                    android:textSize="20sp"
                    app:strokeColor="#EDE6E6"
                    tools:text="إضافة" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>